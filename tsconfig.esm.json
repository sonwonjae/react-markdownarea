{
  "display": "React Markdownarea tsconfig for lint",
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./lib/esm",
    "declarationDir": "./lib/types"
  },
  "files": ["src/index.ts"],
  "include": [
    "src",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": ["node_modules"]
}