{
    "name": "@sonwonjae/react-markdownarea",
    "description": "react markdownarea",
    "version": "0.0.2",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sonwonjae/react-markdownarea.git"
    },
    "keywords": [
        "markdown"
    ],
    "author": "sonwonjae",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sonwonjae/react-markdownarea/issues"
    },
    "homepage": "https://github.com/sonwonjae/react-markdownarea#readme",
    "publishConfig": {
        "access": "public"
    },
    "types": "./lib/cjs/types/index.d.ts",
    "main": "./lib/cjs/index.js",
    "files": [
        "lib/**/*"
    ],
    "exports": {
        "./styles.css": "./dist/index.css",
        ".": "./src/index.ts"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "scripts": {
        "lint": "eslint . --max-warnings 0",
        "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
        "clean": "rm -rf ./lib",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p ./tsconfig.esm.json && mv ./lib/esm/index.js ./lib/esm/index.mjs",
        "build:cjs": "tsc -p ./tsconfig.cjs.json",
        "prepack": "npm run build",
        "test": "mocha"
    },
    "devDependencies": {
        "@types/eslint": "^8.56.10",
        "@types/node": "^20.14.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "@vercel/style-guide": "^5.2.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-turbo": "^2.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-no-relative-import-paths": "^1.5.4",
        "eslint-plugin-only-warn": "^1.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "postcss": "^8.4.38",
        "prettier": "^3.3.2",
        "react": "^18.3.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "tailwind-merge": "^2.3.0"
    }
}
